<%- include('partials/header'); -%>
    <h1>Compose</h1> 
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="composeInput">Title</label>
            <input type="text" name="postTitle" id="composeInput" class="form-control" autocomplete="off">
            <label for="postInput">Post</label>
            <textarea name="postBody" id="postInput" cols="20" rows="10" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>
<%- include('partials/footer'); -%>